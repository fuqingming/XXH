<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_backgrount_color">
    <include layout="@layout/common_title_red"
        android:id="@+id/title"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen"
        android:layout_marginLeft="15dp"
        android:text="原密码"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/et_pwd_bellow"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@color/white_color"
        android:textSize="@dimen/fourteen"
        android:textColor="@color/black"
        android:hint="请输入原密码"
        android:textColorHint="@color/dark"
        android:paddingLeft="15dp"
        android:maxLength="18"
        android:inputType="textPassword"
        android:digits="@string/digits"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="@dimen/fourteen"
        android:layout_marginLeft="15dp"
        android:text="请输入6～18位数字字母组合"
        android:layout_marginTop="30dp"/>
    <EditText
        android:id="@+id/et_pwd_new"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="10dp"
        android:background="@color/white_color"
        android:textSize="@dimen/fourteen"
        android:textColor="@color/black"
        android:hint="输入6～18位数字字母组合"
        android:textColorHint="@color/dark"
        android:paddingLeft="15dp"
        android:maxLength="18"
        android:inputType="textPassword"
        android:digits="@string/digits"/>
    <EditText
        android:id="@+id/et_pwd_again"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="1dp"
        android:background="@color/white_color"
        android:textSize="@dimen/fourteen"
        android:textColor="@color/black"
        android:hint="重新确认新密码"
        android:textColorHint="@color/dark"
        android:paddingLeft="15dp"
        android:maxLength="18"
        android:inputType="textPassword"
        android:digits="@string/digits"/>
</LinearLayout>